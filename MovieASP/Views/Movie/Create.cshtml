@model MovieASP.Models.MovieForm

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MovieForm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Synopsis" class="control-label"></label>
                <input asp-for="Synopsis" class="form-control" />
                <span asp-validation-for="Synopsis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseYear" class="control-label"></label>
                <input asp-for="ReleaseYear" class="form-control" />
                <span asp-validation-for="ReleaseYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RealisatorId" class="control-label"></label>
                <select asp-for="RealisatorId" class="form-control">
                    @foreach (var item in Model.Real)
                    {
                        <option value="@item.Id">@item.FirstName @item.LastName </option>
                    }
                </select>
                <span asp-validation-for="RealisatorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScenaristId" class="control-label"></label>
                <select asp-for="ScenaristId" class="form-control">
                    @foreach (var item in Model.Scen)
                    {
                        <option value="@item.Id">@item.FirstName @item.LastName </option>
                    }
                </select>
                <span asp-validation-for="ScenaristId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
